{
    "$schema": "../../../system/schema/template.json",
    "name": "ChameleonTheme",
    "description": "Optionally adjustable theme",
    "version": "0.9.0",
    "environment": {
        "system": "^8.0"
    },
    "class": "Configurable",
    "url": "https://github.com/friends-of-sunlight-cms/",
    "author": "Friends of Sunlight CMS",
    "responsive": true,
    "css": [
      "resources/styles/regrid.css",
      "resources/styles/style.php"
    ],
    "js": [
      "resources/js/init.js"
    ],
    "layouts": {
      "default": {
        "template": "template.php",
        "slots": [
          "left",
          "right"
        ]
      }
    },
    "dark": false,
    "bbcode.buttons": true,
    "box.parent": "ul",
    "box.item": "li",
    "box.title": "h2",
    "box.title.inside": true
}